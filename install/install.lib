DOCKER_CLEAR (){
docker rm -f $(docker ps -a -q)
docker rmi -f $(docker images -q)
}
INSTALL_CLEAR (){
rm -f /var/lib/mysql/base_install.sh
rm -f /var/lib/mysql/mikbill_2_0_6_utf8.sql
rm -f /var/lib/mysql/mikbill_5.5.sql
rm -f /etc/mikbill/install
}
