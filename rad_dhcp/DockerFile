wget https://github.com/mikbill/distr/blob/master/rad_dhcp/radius_rpm/freeradius-utils-2.2.6-1.el6.x86_64.rpm?raw=true -O freeradius-utils-2.2.6-1.el6.x86_64.rpm && \ 
